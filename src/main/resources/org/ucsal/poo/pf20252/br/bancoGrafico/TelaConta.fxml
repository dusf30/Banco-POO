<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="80.0" styleClass="root-container" stylesheets="@tela-conta.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ucsal.poo.pf20252.br.bancoGrafico.ContaController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Header Corrigido -->
    <HBox alignment="CENTER" spacing="200.0">
        <!-- Logo e Título -->
        <VBox alignment="CENTER" spacing="10.0">
            <ImageView fitHeight="60" fitWidth="120" preserveRatio="true">
                <Image url="@images/logo.png" />
            </ImageView>
            <Label styleClass="header-title" text="Java-Bank" />
        </VBox>

        <!-- Opções (canto superior direito) -->
        <HBox alignment="CENTER_RIGHT" spacing="23.0" styleClass="opcoes-container">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <Image url="@images/sino.png" />
            </ImageView>
            <Button fx:id="menu" contentDisplay="CENTER" mnemonicParsing="false" onAction="#voltarInicio" styleClass="btn-voltar">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <Image url="@images/menu.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="80.0">
        <!-- Saldo Box Corrigido -->
        <HBox alignment="CENTER" styleClass="saldo-box">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <VBox spacing="5.0">
                    <Label styleClass="saldo-label" text="Saldo" />
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <Label styleClass="moeda-label" text="R$" />
                        <Label fx:id="saldoConta" styleClass="saldo-value" text="*****" />
                    </HBox>
                </VBox>
            </HBox>
            <Button fx:id="olhoButton" onAction="#initialize" styleClass="olho-button">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                        <Image url="@images/olho.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Botões de Tarefas Corrigidos -->
        <HBox alignment="CENTER" spacing="80.0" styleClass="botoes-tarefas-container">
            <!-- Sacar -->
            <VBox alignment="CENTER" spacing="7.0" styleClass="btn-box">
                <Button fx:id="sacarBtn" onAction="#onSacarBtnClick" styleClass="botoes-tarefas">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                            <Image url="@images/sacar.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Label styleClass="btn-label" text="Sacar" />
            </VBox>

            <!-- Depositar -->
            <VBox alignment="CENTER" spacing="7.0" styleClass="btn-box">
                <Button fx:id="depositarBtn" onAction="#onDepositarBtnClick" styleClass="botoes-tarefas">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                            <Image url="@images/depositar.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Label styleClass="btn-label" text="Depositar" />
            </VBox>

            <!-- Transferir -->
            <VBox alignment="CENTER" spacing="7.0" styleClass="btn-box">
                <Button fx:id="transferirBtn" onAction="#onTransferirBtnClick" styleClass="botoes-tarefas">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                            <Image url="@images/transferir.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Label styleClass="btn-label" text="Transferir" />
            </VBox>
        </HBox>
    </VBox>
</VBox>
